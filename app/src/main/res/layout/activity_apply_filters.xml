<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kohsheen.firebasedemoforkoshu.ApplyFiltersActivity">



    <!--<include layout="@layout/task_bar"/>-->

    <include
        android:id="@+id/filterstoolbar"
        layout="@layout/filterstoolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />






    <ImageView
        android:layout_width="match_parent"
        android:layout_below="@id/filterstoolbar"
        android:layout_height="390dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/backgallery"
        android:id="@+id/imageView" />
    
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/imageView"
        android:elevation="2dp"
        android:layout_height="180dp"
       android:layout_margin="10dp">
        

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="2dp"
        android:id="@+id/none" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="None"
        android:textSize="16dp"
        android:id="@+id/tvNone"
        android:gravity="center_horizontal"
        android:layout_marginLeft="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignBottom="@+id/none"/>


    <ImageView
        android:id="@+id/old"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_toRightOf="@+id/none"
        android:layout_margin="2dp"
        android:layout_weight="1" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Old"
        android:textSize="16dp"
        android:id="@+id/tvOld"
        android:gravity="center_horizontal"
        android:layout_toRightOf="@+id/tvNone"
        android:layout_marginLeft="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignBottom="@+id/old"/>




    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/grey"
        android:layout_toRightOf="@+id/old"
        android:layout_margin="2dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gray Scale"
        android:textSize="16dp"
        android:id="@+id/tvGrey"
        android:gravity="center_horizontal"
        android:layout_toRightOf="@+id/tvOld"
        android:layout_marginLeft="110dp"
        android:layout_alignParentBottom="true" />



    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/lomo"
        android:textSize="16dp"
        android:layout_toRightOf="@+id/grey"
        android:layout_margin="2dp"
        android:layout_weight="1"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lomoish"
        android:textSize="16dp"
        android:id="@+id/tvLomo"
        android:gravity="center_horizontal"
        android:layout_toRightOf="@+id/tvGrey"
        android:layout_marginLeft="90dp"
        android:layout_alignParentBottom="true"/>



    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/hdr"
        android:layout_toRightOf="@+id/lomo"
        android:layout_margin="2dp"
        android:layout_weight="1"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HDR"
        android:id="@+id/tvHdr"
        android:textSize="16dp"
        android:gravity="center_horizontal"
        android:layout_toRightOf="@+id/tvLomo"
        android:layout_marginLeft="110dp"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/sketch"
        android:layout_toRightOf="@+id/hdr"
        android:layout_margin="2dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sketch"
        android:textSize="16dp"
        android:id="@+id/tvSketch"
        android:gravity="center_horizontal"
        android:layout_toRightOf="@+id/tvHdr"
        android:layout_marginLeft="120dp"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/light"
        android:textSize="16dp"
        android:layout_toRightOf="@+id/sketch"
        android:layout_margin="2dp"
        android:layout_weight="1"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light"
        android:id="@+id/tvLight"
        android:gravity="center_horizontal"
        android:layout_toRightOf="@+id/tvSketch"
        android:textSize="16dp"
        android:layout_marginLeft="120dp"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/block"
        android:layout_toRightOf="@id/light"
        android:layout_margin="2dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block"
        android:id="@+id/tvBlock"
        android:textSize="16dp"
        android:gravity="center_horizontal"
        android:layout_toRightOf="@+id/tvLight"
        android:layout_marginLeft="110dp"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/tv"
        android:layout_margin="2dp"
        android:layout_toRightOf="@id/block"
        android:layout_weight="1"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TV"
        android:textSize="16dp"
        android:id="@+id/tvTv"
        android:gravity="center_horizontal"
        android:layout_toRightOf="@+id/tvBlock"
        android:layout_marginLeft="110dp"
        android:layout_alignParentBottom="true"/>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_toRightOf="@id/tv"
        android:id="@+id/softglow"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soft Glow"
        android:id="@+id/tvSoftlow"
        android:textSize="16dp"
        android:gravity="center_horizontal"
        android:layout_toRightOf="@+id/tvTv"
        android:layout_marginLeft="100dp"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>


        
        
    </HorizontalScrollView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:id="@+id/next"
            android:text="Next"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/md_white_1000"
            android:layout_alignParentBottom="true"
            android:padding="0dp"
            android:background="@color/md_indigo_300"/>

</RelativeLayout>
