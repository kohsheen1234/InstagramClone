<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardMaxElevation="5dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    card_view:cardBackgroundColor="@color/md_white_1000"

    >
    <!--card_view:cardElevation="5dp"-->
    <!--card_view:contentPadding="5dp"-->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_height="490dp"
        android:background="@color/md_white_1000">


        <ImageView
            android:layout_width="45dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="10dp"
            android:layout_height="45dp"
            android:id="@+id/dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/displaypic" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_toRightOf="@id/dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/md_black_1000"
                android:text="Kohsheen"
                android:id="@+id/UserNameTextView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_toRightOf="@id/dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/userNameEditText"
            android:textColor="@color/md_grey_700"
            android:text="Image Description"

            android:id="@+id/ImageDescriptionTextView" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="17dp"
                android:src="@drawable/dots"
                android:layout_marginLeft="190dp"/>




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/UserNameTextView"
        android:src="@mipmap/ic_launcher" />


            <ImageView
                android:layout_width="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:id="@+id/like"
                android:layout_below="@+id/imageView"
                android:layout_height="30dp"
                android:src="@drawable/like"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_marginLeft="10dp"
                android:padding="2dp"
                android:layout_toRightOf="@id/like"
                android:layout_below="@+id/imageView"
                android:layout_weight="1"
                android:id="@+id/comments"
                android:layout_height="30dp"
                android:src="@drawable/comment"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:layout_below="@+id/imageView"
                android:padding="2dp"
                android:layout_toRightOf="@+id/comments"
                android:src="@drawable/send"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_marginLeft="170dp"
                android:padding="2dp"
                android:layout_below="@+id/imageView"
                android:layout_alignParentRight="true"
                android:layout_height="30dp"
                android:layout_weight="25"
                android:layout_marginRight="10dp"
                android:src="@drawable/save"/>





        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_below="@id/like"
            android:textColor="@color/md_black_1000"
            android:text="Image Name"
            android:id="@+id/ImageNameTextView" />





    </RelativeLayout>

</android.support.v7.widget.CardView>